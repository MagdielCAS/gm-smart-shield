{
	"name": "web",
	"private": true,
	"version": "0.1.0",
	"description": "GM Smart Shield",
	"author": "MagdielCAS",
	"repository": {
		"type": "git",
		"url": "https://github.com/MagdielCAS/gm-smart-shield"
	},
	"type": "module",
	"main": "dist-electron/main.cjs",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "biome check .",
		"format": "biome check --write .",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:bdd": "bddgen && playwright test",
		"electron:build": "tsc -p tsconfig.electron.json",
		"electron:dev": "concurrently -k \"pnpm dev\" \"wait-on tcp:5173 && pnpm electron:build && cross-env NODE_ENV=development electron .\"",
		"electron:pack": "pnpm build && pnpm electron:build && electron-builder"
	},
	"dependencies": {
		"@tanstack/react-query": "^5.90.21",
		"clsx": "^2.1.1",
		"lucide-react": "^0.575.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.13.1",
		"remark-gfm": "^4.0.1",
		"tailwind-merge": "^3.5.0",
		"zustand": "^5.0.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@playwright/test": "^1.58.2",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"autoprefixer": "^10.4.24",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron": "^40.6.1",
		"electron-builder": "^26.8.1",
		"jsdom": "^28.1.0",
		"playwright-bdd": "^8.4.2",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.19",
		"typescript": "~5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"wait-on": "^9.0.4"
	},
	"build": {
		"appId": "com.gmshield.app",
		"productName": "GM Smart Shield",
		"directories": {
			"output": "dist-app"
		},
		"files": [
			"dist",
			"dist-electron",
			"package.json"
		],
		"mac": {
			"target": "dmg"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
